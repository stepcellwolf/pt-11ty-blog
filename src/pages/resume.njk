<main class="max-w-xxl relative mx-auto min-h-screen px-8 py-20">

  <!-- Header -->
  <section class="flex items-center">
    <img
      src="{{ site.defaultImage }}"
      alt="{{ site.author }}"
      width="80"
      height="80"
      class="rounded-full object-cover"
      loading="lazy"
    />
    <div class="ml-4">
      <h1 class="mb-0.5 text-xl text-slate-900 dark:text-slate-100">
        {{ site.author }}
      </h1>
      <p class="text-sm text-slate-600 dark:text-slate-300">
        {{ site.jobTitle }}
      </p>
      {% if site.url %}
      <span class="text-sm text-slate-400 dark:text-slate-400">
        <a
          href="{{ site.url }}"
          target="_blank"
          rel="noopener noreferrer"
          class="hover:underline"
        >
          {{ site.url | replace('https://','') | replace('http://','') | replace('www.','') }}
        </a>
      </span>
      {% endif %}
    </div>
  </section>

  <!-- About -->
  {% if site.resume %}
  <section class="my-9 text-sm">
    <h3 class="mb-1 text-slate-900 dark:text-slate-100">About</h3>
    <div class="text-slate-600 dark:text-slate-300">
      <p>{{ site.resume }}</p>
    </div>
  </section>
  {% endif %}

  <!-- Resume Sections -->
  {% for section in resume %}
  <section class="my-14 text-sm">
    <h3 class="mb-6">{{ section.title }}</h3>

    <div class="flex flex-col gap-6">
      {% if section.items and section.items.length %}
        {% for item in section.items %}
        <div class="flex">
          <!-- Date -->
          <div class="mr-8 w-full max-w-[100px] text-slate-400 dark:text-slate-400">
            {{ item.date or '' }}
          </div>

          <!-- Content -->
          <div class="flex flex-1 flex-col">
            {% if item.title %}
            <h4>{{ item.title }}</h4>
            {% endif %}

            {% if item.subTitle %}
            <p class="text-slate-600 dark:text-gray-400">
              {% if item.href %}
              <a
                href="{{ item.href }}"
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex hover:underline"
              >
                {{ item.subTitle }}
                <svg
                  width="12"
                  height="12"
                  viewBox="0 0 12 12"
                  fill="none"
                  xmlns="http://www.w3.org/2000/svg"
                >
                  <path
                    d="M3.5 3C3.22386 3 3 3.22386 3 3.5C3 3.77614 3.22386 4 3.5 4V3ZM8.5 3.5H9C9 3.22386 8.77614 3 8.5 3V3.5ZM8 8.5C8 8.77614 8.22386 9 8.5 9C8.77614 9 9 8.77614 9 8.5H8ZM2.64645 8.64645C2.45118 8.84171 2.45118 9.15829 2.64645 9.35355C2.84171 9.54882 3.15829 9.54882 3.35355 9.35355L2.64645 8.64645ZM3.5 4H8.5V3H3.5V4ZM8 3.5V8.5H9V3.5H8ZM8.14645 3.14645L2.64645 8.64645L3.35355 9.35355L8.85355 3.85355L8.14645 3.14645Z"
                    class="fill-current text-slate-900 dark:text-slate-100"
                  />
                </svg>
              </a>
              {% else %}
                {{ item.subTitle }}
              {% endif %}
            </p>
            {% endif %}

            {% if item.description %}
            <p class="mt-2 text-slate-600 dark:text-gray-400">
              {{ item.description }}
            </p>
            {% endif %}

            {% if item.awards %}
            <small class="text-slate-500 dark:text-slate-400">
              {{ item.awards }}
            </small>
            {% endif %}
          </div>
        </div>
        {% endfor %}
      {% else %}
        <p>No items</p>
      {% endif %}
    </div>
  </section>
  {% endfor %}

</main>


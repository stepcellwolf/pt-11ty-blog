<div class="divide-y divide-gray-200 dark:divide-gray-700">

  <div class="container py-12">
    <div class="flex flex-wrap -m-4">
      {% for pub in publications %}
        <div class="w-full p-4 md:w-1/2">
          <div class="h-full overflow-hidden rounded-lg border-2 border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-800">
            {% if pub.imgSrc %}
            <div>
              {% if pub.href %}
              <a href="{{ pub.href }}" target="_blank" rel="noopener noreferrer">
                <img
                  src="{{ pub.imgSrc }}"
                  alt="{{ pub.title }}"
                  class="h-60 w-full object-cover"
                />
              </a>
              {% else %}
              <img
                src="{{ pub.imgSrc }}"
                alt="{{ pub.title }}"
                class="h-60 w-full object-cover"
              />
              {% endif %}
            </div>
            {% endif %}

            <div class="p-6">
              <h2 class="mb-3 text-2xl font-bold leading-8 tracking-tight text-gray-900 dark:text-gray-100">
                {% if pub.href %}
                  <a href="{{ pub.href }}" target="_blank" rel="noopener noreferrer" class="hover:underline">
                    {{ pub.title }}
                  </a>
                {% else %}
                  {{ pub.title }}
                {% endif %}
              </h2>

              <p class="mb-2 text-sm text-gray-500 dark:text-gray-400">
                Type: {{ pub.type }}
              </p>

              {% if pub.date %}
              <p class="text-sm text-gray-500 dark:text-gray-400">
                Date: {{ pub.date }}
              </p>
              {% endif %}

              {% if pub.publisher %}
              <p class="text-sm text-gray-500 dark:text-gray-400">
                Publisher: {{ pub.publisher }}
              </p>
              {% endif %}

              {% if pub.isbn %}
              <p class="text-sm text-gray-500 dark:text-gray-400">
                {{ pub.isbn }}
              </p>
              {% endif %}

              {% if pub.href %}
              <div class="mt-4">
                <a
                  href="{{ pub.href }}"
                  class="text-primary-500 hover:text-primary-600 dark:hover:text-primary-400 text-base font-medium"
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  Link &rarr;
                </a>
              </div>
              {% endif %}
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>


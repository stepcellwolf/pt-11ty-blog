    <div class="flex flex-wrap -m-4">
      {% for project in projects %}
        <div class="w-full p-4 md:w-1/2">
          <div class="overflow-hidden rounded-lg border bg-white dark:bg-gray-800 dark:border-gray-700">
            {% if project.imgSrc %}
            <img
              src="{{ project.imgSrc }}"
              alt="{{ project.title }}"
              class="h-48 w-full object-cover"
            />
            {% endif %}
            <div class="p-6">
              <h2 class="text-xl font-semibold text-gray-900 dark:text-gray-100">{{ project.title }}</h2>
              {% if project.date %}
              <p class="text-sm text-gray-500 dark:text-gray-400">{{ project.date }}</p>
              {% endif %}
              <p class="mt-2 text-base text-gray-700 dark:text-gray-300">{{ project.description }}</p>
              {% if project.href %}
              <a href="{{ project.href }}" class="mt-4 inline-block text-primary-600 hover:underline">
                Learn more →
              </a>
              {% endif %}
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

